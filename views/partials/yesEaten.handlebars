<div>
  <ul class="text-center">
    {{#each burgers}}
      {{#if this.devoured}}
        <li>  
          <p><strong>{{this.burger_name}}</strong></p>
          <p>Has been ated.</p>
          <form action="/{{this.id}}?_method=DELETE" method="POST">
            <input type="hidden" name="id" value="{{this.id}}">
            <button class="btn btn-warning" type="submit">TRASH WRAPPER!</button>
          </form>
        </li>
      {{/if}}
    {{/each}}
  </ul>
</div>